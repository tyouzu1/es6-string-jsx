{
  "fileTypes": [
    "js",
    "jsx",
    "ts",
    "tsx"
  ],
	"injectionSelector": "L:source.js -comment -string, L:source.jsx -comment -string,  L:source.js.jsx -comment -string, L:source.ts -comment -string, L:source.tsx -comment -string",
	"injections": {
		"L:source": {
			"patterns": [
				{
					"match": "<",
					"name": "invalid.illegal.bad-angle-bracket.html"
				}
			]
		}
	},
	"patterns": [
		{
			"begin": "(.?(jsx))(`)",
			"end": "(`)",
			"beginCaptures": {
				"1": {
					"name": "variable.parameter"
				}
			},
			"patterns": [
				{
					"include": "source.ts#template-substitution-element"
				},
				{
					"include": "source.js"
				}
			]
		},
		{
			"begin": "(\\s?\\/?\\*?\\s?(jsx|inline-jsx)\\s?\\*?\\/?\\s?)(`)",
			"beginCaptures": {
				"1": {
					"name": "comment.block"
				}
			},
			"end": "(`)",
			"patterns": [
				{
					"include": "source.ts#template-substitution-element"
				},
				{
					"include": "source.js"
				}
			]
		},
		{
			"begin": "(?<=\\=|\\:)\\s+(\\/\\/\\s?(jsx|inline-jsx)\\s?$)",
			"beginCaptures": {
				"1": {
					"name": "comment.line"
				}
			},
			"end": "(`)",
			"patterns": [
				{
					"begin": "(\\G)",
					"end": "(`)"
				},
				{
					"include": "source.ts#template-substitution-element"
				},
				{
					"include": "source.js"
				}
			]
		}
	],
	"scopeName": "inline.es6-jsx"
}